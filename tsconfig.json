{
    "compilerOptions": {
      "target": "ES2024",                         // Versão do JavaScript que será gerada
      "module": "ESNext",                        // Sistema de módulos
      "outDir": "./dist/js",                     // Pasta de saída dos arquivos compilados
      "rootDir": "./src",                        // Pasta de origem dos arquivos TypeScript
      "strict": true,                            // Habilita todas as checagens estritas
      "esModuleInterop": true,                   // Facilita a importação de módulos CommonJS
      "skipLibCheck": true,                      // Ignora checagem de tipos das bibliotecas
      "forceConsistentCasingInFileNames": true   // Garante que o nome dos arquivos seja consistente
    },
    "include": [
      "src/**/*.ts"                              // Incluir todos os arquivos .ts na pasta src
    ],
    "exclude": [
      "node_modules"                             // Exclui a pasta node_modules da compilação
    ]
  }
  